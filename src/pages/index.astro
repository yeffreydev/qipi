---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Gallery from "../components/Gallery.astro";

const slides = [
	{
		title: "Digitalizar la Confianza",
		highlight: "Confianza",
		description: "Transformamos la reciprocidad y autogestión de comunidades rurales en capital productivo.",
		image: "/gallery/IMG_2737.webp",
		badge: "Innovación Rural"
	},
	{
		title: "Inversión con Propósito",
		highlight: "Propósito",
		description: "Tu dinero despierta e impacta al ritmo de las comunidades rurales.",
		image: "/gallery/IMG_20201120_172316709.webp",
		badge: "Impacto Ético"
	},
	{
		title: "Tecnología Humana",
		highlight: "Humana",
		description: "Diseñamos para quienes construyen el futuro desde la tierra.",
		image: "/gallery/IMG_2692.webp",
		badge: "Comunidad Qipi"
	}
];
---

<Layout title="QIPI | Digitalizar la Confianza">
	<Navbar />

	<main class="overflow-hidden">
		<!-- Hero Section -->
		<section
			class="relative min-h-[95vh] flex items-center justify-center pt-16 overflow-hidden bg-qipi-ink-black"
		>
			<!-- Carousel Slides -->
			<div id="hero-carousel" class="absolute inset-0 z-0">
				{slides.map((slide, index) => (
					<div 
						class={`hero-slide absolute inset-0 transition-all duration-1000 ease-in-out ${index === 0 ? 'opacity-100' : 'opacity-0 scale-105'}`}
						data-index={index}
					>
						<div class="skeleton-loader absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 animate-shimmer" style="background-size: 200% 100%;"></div>
						<img 
							src={slide.image} 
							alt={slide.title} 
							class="w-full h-full object-cover opacity-0 transition-opacity duration-1000"
							onload="this.classList.remove('opacity-0'); this.classList.add('opacity-60'); this.parentElement.querySelector('.skeleton-loader')?.remove();"
						/>
						<div class="absolute inset-0 bg-gradient-to-b from-qipi-ink-black/40 via-qipi-ink-black/60 to-qipi-ink-black/80"></div>
						
						<div class="absolute inset-0 z-10 flex items-center justify-center">
							<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center hero-content-layer transition-transform duration-1000">
								<span
									class="inline-block py-1 px-3 rounded-full bg-qipi-light-blue text-qipi-ink-black text-sm font-semibold mb-6 backdrop-blur-sm border border-white/20"
								>
									{slide.badge}
								</span>
								<h1
									class="text-5xl md:text-7xl font-extrabold font-qipi text-white mb-6 leading-tight tracking-tight"
								>
									{slide.title.split(slide.highlight)[0]}<span
										class="text-transparent bg-clip-text bg-gradient-to-r from-qipi-light-blue to-white"
										>{slide.highlight}</span
									>{slide.title.split(slide.highlight)[1]}
								</h1>
								<p
									class="mt-4 text-xl text-white/80 max-w-2xl mx-auto mb-10 leading-relaxed"
								>
									{slide.description}
								</p>
								<!-- Same Action Buttons for all slides -->
								<div class="flex flex-col sm:flex-row gap-4 justify-center">
									<a
										href="/grow-funding#donar"
										class="px-8 py-4 bg-qipi-ink-black text-white rounded-full font-semibold text-lg shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-2 group border border-white/10"
									>
										Campaña Qipi
										<svg
											xmlns="http://www.w3.org/2000/svg"
											class="h-5 w-5 group-hover:translate-x-1 transition-transform"
											fill="none"
											viewBox="0 0 24 24"
											stroke="currentColor"
										>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
										</svg>
									</a>
									<a
										href="#propuesta"
										class="px-8 py-4 bg-white/10 backdrop-blur-md text-white border border-white/20 rounded-full font-semibold text-lg shadow-sm hover:shadow-md hover:bg-white/20 transition-all duration-300"
									>
										Conocer Más
									</a>
								</div>
							</div>
						</div>
					</div>
				))}
			</div>

			<!-- Static Background Overlay Pattern -->
			<div
				class="absolute inset-0 z-1 opacity-20 overflow-hidden pointer-events-none"
			>
				<svg
					class="absolute w-full h-full"
					viewBox="0 0 1000 1000"
					xmlns="http://www.w3.org/2000/svg"
					preserveAspectRatio="xMidYMid slice"
				>
					<defs>
						<linearGradient
							id="grad1"
							x1="0%"
							y1="0%"
							x2="100%"
							y2="100%"
						>
							<stop
								offset="0%"
								style="stop-color:var(--color-qipi-light-blue);stop-opacity:0.2"
							></stop>
							<stop
								offset="100%"
								style="stop-color:var(--color-qipi-blue-slate);stop-opacity:0.1"
							></stop>
						</linearGradient>
					</defs>

					<!-- Abstract Rural Topology Lines -->
					<path
						d="M-100,600 Q200,550 400,650 T900,600 T1200,700"
						fill="none"
						stroke="url(#grad1)"
						stroke-width="2"
						opacity="0.4"></path>
					<path
						d="M-100,700 Q150,600 350,750 T850,650 T1200,800"
						fill="none"
						stroke="url(#grad1)"
						stroke-width="2"
						opacity="0.3"></path>
					<path
						d="M-100,500 Q250,450 450,550 T950,500 T1200,600"
						fill="none"
						stroke="url(#grad1)"
						stroke-width="2"
						opacity="0.2"></path>

					<!-- Digital Trust Nodes -->
					<circle
						cx="200"
						cy="550"
						r="4"
						fill="var(--color-qipi-blue-slate)"
						opacity="0.3"
					>
						<animate
							attributeName="opacity"
							values="0.1;0.5;0.1"
							dur="4s"
							repeatCount="indefinite"></animate>
					</circle>
					<circle
						cx="400"
						cy="650"
						r="3"
						fill="var(--color-qipi-light-blue)"
						opacity="0.4"
					>
						<animate
							attributeName="opacity"
							values="0.2;0.6;0.2"
							dur="5s"
							repeatCount="indefinite"></animate>
					</circle>
					<circle
						cx="700"
						cy="580"
						r="5"
						fill="var(--color-qipi-blue-slate)"
						opacity="0.2"
					>
						<animate
							attributeName="opacity"
							values="0.1;0.4;0.1"
							dur="3s"
							repeatCount="indefinite"></animate>
					</circle>
					<circle
						cx="850"
						cy="650"
						r="3"
						fill="var(--color-qipi-light-blue)"
						opacity="0.5"
					>
						<animate
							attributeName="opacity"
							values="0.3;0.7;0.3"
							dur="6s"
							repeatCount="indefinite"></animate>
					</circle>

					<!-- Connections -->
					<line
						x1="200"
						y1="550"
						x2="400"
						y2="650"
						stroke="var(--color-qipi-blue-slate)"
						stroke-width="0.5"
						opacity="0.2"></line>
					<line
						x1="400"
						y1="650"
						x2="700"
						y2="580"
						stroke="var(--color-qipi-blue-slate)"
						stroke-width="0.5"
						opacity="0.1"></line>
					<line
						x1="700"
						y1="580"
						x2="850"
						y2="650"
						stroke="var(--color-qipi-blue-slate)"
						stroke-width="0.5"
						opacity="0.2"></line>
				</svg>

				<!-- Soft Glows -->
				<div
					class="absolute top-20 left-10 w-96 h-96 bg-qipi-light-blue/20 rounded-full filter blur-[120px] animate-pulse"
				>
				</div>
				<div
					class="absolute bottom-20 right-10 w-[500px] h-[500px] bg-qipi-blue-slate/10 rounded-full filter blur-[150px]"
				>
				</div>
			</div>

			<!-- Carousel Indicators -->
			<div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-20 flex gap-3">
				{slides.map((_, index) => (
					<button 
						class={`carousel-dot w-2.5 h-2.5 md:w-3 md:h-3 rounded-full border border-white/50 transition-all duration-300 ${index === 0 ? 'bg-white w-8' : 'bg-white/30 hover:bg-white/50'}`}
						data-index={index}
					></button>
				))}
			</div>

			<!-- Carousel Arrows -->
			<div class="absolute top-[85%] md:top-1/2 left-4 right-4 z-20 flex items-center justify-between pointer-events-none -translate-y-1/2 md:-translate-y-1/2">
				<button 
					id="prev-slide" 
					class="w-10 h-10 md:w-12 md:h-12 rounded-full border border-white/20 bg-white/5 backdrop-blur-md text-white flex items-center justify-center hover:bg-white/20 transition-all pointer-events-auto"
					aria-label="Previous Slide"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 md:h-6 md:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
					</svg>
				</button>
				<button 
					id="next-slide" 
					class="w-10 h-10 md:w-12 md:h-12 rounded-full border border-white/20 bg-white/5 backdrop-blur-md text-white flex items-center justify-center hover:bg-white/20 transition-all pointer-events-auto"
					aria-label="Next Slide"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 md:h-6 md:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</button>
			</div>
		</section>

		<script>
			const slides = document.querySelectorAll('.hero-slide');
			const dots = document.querySelectorAll('.carousel-dot');
			let currentSlide = 0;
			let interval: ReturnType<typeof setInterval>;

			function showSlide(index: number) {
				slides.forEach((slide, i) => {
					if (i === index) {
						slide.classList.remove('opacity-0', 'scale-105');
						slide.classList.add('opacity-100', 'scale-100');
					} else {
						slide.classList.remove('opacity-100', 'scale-100');
						slide.classList.add('opacity-0', 'scale-105');
					}
				});

				dots.forEach((dot, i) => {
					if (i === index) {
						dot.classList.add('bg-white', 'w-8');
						dot.classList.remove('bg-white/30');
					} else {
						dot.classList.remove('bg-white', 'w-8');
						dot.classList.add('bg-white/30');
					}
				});

				currentSlide = index;
			}

			function nextSlide() {
				showSlide((currentSlide + 1) % slides.length);
			}

			function prevSlide() {
				showSlide((currentSlide - 1 + slides.length) % slides.length);
			}

			function startAutoplay() {
				stopAutoplay();
				interval = setInterval(nextSlide, 6000);
			}

			function stopAutoplay() {
				if (interval) clearInterval(interval);
			}

			dots.forEach((dot, i) => {
				dot.addEventListener('click', () => {
					showSlide(i);
					startAutoplay();
				});
			});

			document.getElementById('next-slide')?.addEventListener('click', () => {
				nextSlide();
				startAutoplay();
			});

			document.getElementById('prev-slide')?.addEventListener('click', () => {
				prevSlide();
				startAutoplay();
			});

			startAutoplay();
		</script>


		<!-- Propuesta de Valor Section -->
		<section id="propuesta" class="py-24 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2
						class="text-3xl md:text-4xl font-bold text-qipi-ink-black mb-4"
					>
						La Red de Confianza
					</h2>
					<p class="text-lg text-gray-500 max-w-3xl mx-auto">
						Somos la infraestructura financiera cooperativa que
						conecta a diversos actores para construir una economía
						ética y transparente.
					</p>
				</div>

				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
				>
					<!-- Card 1: Capital Local -->
					<div
						class="bg-qipi-white-2 p-8 rounded-2xl border border-gray-100 hover:border-qipi-light-blue hover:shadow-xl transition-all duration-300 group"
					>
						<div
							class="w-14 h-14 bg-qipi-light-blue/30 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
						>
							<svg
								class="w-8 h-8 text-qipi-ink-black"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
								><path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
								></path></svg
							>
						</div>
						<h3 class="text-xl font-bold text-qipi-ink-black mb-3">
							Capital Local
						</h3>
						<p class="text-sm text-gray-600 mb-4 font-semibold">
							Socios Locales
						</p>
						<p class="text-sm text-gray-500 leading-relaxed">
							De la exclusión a la autogestión. Integración a una
							cooperativa de cooperativas con acceso a crédito
							justo y ahorro seguro.
						</p>
					</div>

					<!-- Card 2: Capital Aliado -->
					<div
						class="bg-qipi-white-2 p-8 rounded-2xl border border-gray-100 hover:border-qipi-light-blue hover:shadow-xl transition-all duration-300 group"
					>
						<div
							class="w-14 h-14 bg-green-100/50 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
						>
							<svg
								class="w-8 h-8 text-green-700"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
								><path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
								></path></svg
							>
						</div>
						<h3 class="text-xl font-bold text-qipi-ink-black mb-3">
							Capital Aliado
						</h3>
						<p class="text-sm text-gray-600 mb-4 font-semibold">
							Inversionistas Éticos
						</p>
						<p class="text-sm text-gray-500 leading-relaxed">
							Tu dinero despierta e impacta. Inversión ética que
							crece al ritmo de las comunidades rurales.
						</p>
					</div>

					<!-- Card 3: Capital de Impacto -->
					<div
						class="bg-qipi-white-2 p-8 rounded-2xl border border-gray-100 hover:border-qipi-light-blue hover:shadow-xl transition-all duration-300 group"
					>
						<div
							class="w-14 h-14 bg-yellow-100/50 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
						>
							<svg
								class="w-8 h-8 text-yellow-700"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
								><path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
								></path></svg
							>
						</div>
						<h3 class="text-xl font-bold text-qipi-ink-black mb-3">
							Capital de Impacto
						</h3>
						<p class="text-sm text-gray-600 mb-4 font-semibold">
							Donantes / ONGs
						</p>
						<p class="text-sm text-gray-500 leading-relaxed">
							Cimientos para la sostenibilidad. Fortalecimiento de
							la infraestructura tecnológica y educativa.
						</p>
					</div>

					<!-- Card 4: Aliados Estratégicos -->
					<div
						class="bg-qipi-white-2 p-8 rounded-2xl border border-gray-100 hover:border-qipi-light-blue hover:shadow-xl transition-all duration-300 group"
					>
						<div
							class="w-14 h-14 bg-purple-100/50 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
						>
							<svg
								class="w-8 h-8 text-purple-700"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
								><path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"
								></path></svg
							>
						</div>
						<h3 class="text-xl font-bold text-qipi-ink-black mb-3">
							Aliados de Visibilidad
						</h3>
						<p class="text-sm text-gray-600 mb-4 font-semibold">
							Medios y Empresas
						</p>
						<p class="text-sm text-gray-500 leading-relaxed">
							Visibilidad y respaldo. Posicionando la innovación
							rural y generando movimientos de cambio.
						</p>
					</div>
				</div>
			</div>
		</section>

		<Gallery limit={6} />

		<!-- Benefits Section -->
		<section
			id="beneficios"
			class="py-24 bg-qipi-white-2 relative overflow-hidden"
		>
			<!-- Decorative background elements -->
			<div
				class="absolute -left-20 top-1/2 w-96 h-96 bg-qipi-light-blue/20 rounded-full filter blur-3xl"
			>
			</div>

			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<div
					class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
				>
					<div>
						<h2
							class="text-3xl md:text-4xl font-bold text-qipi-ink-black mb-6"
						>
							Innovación desde el Campo,<br />Para el Mundo
						</h2>
						<p class="text-lg text-gray-600 mb-8">
							QIPI no es solo una app, es el sistema operativo de
							la confianza comunal. Digitalizamos lo que ya existe
							para potenciarlo.
						</p>

						<ul class="space-y-6">
							<li class="flex items-start">
								<div
									class="flex-shrink-0 w-8 h-8 rounded-full bg-qipi-ink-black flex items-center justify-center mt-1"
								>
									<svg
										class="w-4 h-4 text-white"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
										><path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M5 13l4 4L19 7"></path></svg
									>
								</div>
								<div class="ml-4">
									<h4
										class="text-lg font-bold text-qipi-ink-black"
									>
										Reducción de Riesgos
									</h4>
									<p class="text-sm text-gray-500">
										Registros digitales inmutables que
										disminuyen errores y previenen la
										morosidad.
									</p>
								</div>
							</li>
							<li class="flex items-start">
								<div
									class="flex-shrink-0 w-8 h-8 rounded-full bg-qipi-ink-black flex items-center justify-center mt-1"
								>
									<svg
										class="w-4 h-4 text-white"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
										><path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M5 13l4 4L19 7"></path></svg
									>
								</div>
								<div class="ml-4">
									<h4
										class="text-lg font-bold text-qipi-ink-black"
									>
										Retorno Social
									</h4>
									<p class="text-sm text-gray-500">
										Créditos justos (1%) que fortalecen
										economías locales y cierran brechas
										digitales.
									</p>
								</div>
							</li>
							<li class="flex items-start">
								<div
									class="flex-shrink-0 w-8 h-8 rounded-full bg-qipi-ink-black flex items-center justify-center mt-1"
								>
									<svg
										class="w-4 h-4 text-white"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
										><path
											stroke-linecap="round"
