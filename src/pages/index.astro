						let currentBenefitSlide = 0;

						function showBenefitSlide(index: number) {
							benefitSlides.forEach((slide, i) => {
								(slide as HTMLElement).style.opacity = i === index ? '1' : '0';
							});

							benefitDots.forEach((dot, i) => {
								dot.classList.toggle('bg-white/50', i === index);
								dot.classList.toggle('bg-white/20', i !== index);
							});

							currentBenefitSlide = index;
						}

						benefitDots.forEach((dot, i) => {
							dot.addEventListener('click', () => showBenefitSlide(i));
						});

