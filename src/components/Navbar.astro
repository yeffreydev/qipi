<nav
    class="w-full bg-qipi-white/80 backdrop-blur-md border-b border-qipi-light-blue fixed top-0 z-50"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div
                class="flex-shrink-0 flex items-center gap-2 cursor-pointer"
                onclick="window.location.href='/'"
            >
                <img
                    class="h-10 w-auto rounded-full"
                    src="/qipi.svg"
                    alt="Qipi Logo"
                />
            </div>

            <!-- Desktop menu -->
            <div class="hidden md:flex space-x-8 items-center">
                <a
                    href="/#propuesta"
                    class="text-qipi-blue-slate hover:text-qipi-ink-black px-3 py-2 rounded-md text-sm font-medium transition-colors"
                    >Propuesta</a
                >
                <a
                    href="/gallery"
                    class="text-qipi-blue-slate hover:text-qipi-ink-black px-3 py-2 rounded-md text-sm font-medium transition-colors"
                    >Galería</a
                >
                <a
                    href="/#beneficios"
                    class="text-qipi-blue-slate hover:text-qipi-ink-black px-3 py-2 rounded-md text-sm font-medium transition-colors"
                    >Beneficios</a
                >
                <a
                    href="/grow-funding"
                    class="bg-qipi-ink-black text-qipi-white hover:bg-opacity-90 px-4 py-2 rounded-full text-sm font-medium transition-all shadow-md hover:shadow-lg"
                >
                    Campaña Qipi
                </a>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden flex items-center">
                <button
                    id="mobile-menu-button"
                    class="text-qipi-blue-slate hover:text-qipi-ink-black focus:outline-none p-2 transition-colors"
                >
                    <svg
                        id="menu-icon"
                        class="h-6 w-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg
                        id="close-icon"
                        class="h-6 w-6 hidden"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu container -->
    <div
        id="mobile-menu"
        class="hidden md:hidden bg-qipi-white/95 backdrop-blur-lg border-b border-qipi-light-blue overflow-hidden transition-all duration-300 ease-in-out max-h-0"
    >
        <div class="px-4 pt-2 pb-6 space-y-2">
            <a
                href="/#propuesta"
                class="mobile-link block px-4 py-3 text-base font-medium text-qipi-blue-slate hover:text-qipi-ink-black hover:bg-qipi-light-blue/20 rounded-xl transition-all"
                >Propuesta</a
            >
            <a
                href="/gallery"
                class="mobile-link block px-4 py-3 text-base font-medium text-qipi-blue-slate hover:text-qipi-ink-black hover:bg-qipi-light-blue/20 rounded-xl transition-all"
                >Galería</a
            >
            <a
                href="/#beneficios"
                class="mobile-link block px-4 py-3 text-base font-medium text-qipi-blue-slate hover:text-qipi-ink-black hover:bg-qipi-light-blue/20 rounded-xl transition-all"
                >Beneficios</a
            >
            <div class="pt-4 px-4">
                <a
                    href="/grow-funding"
                    class="mobile-link block w-full text-center bg-qipi-ink-black text-qipi-white py-3 rounded-full font-bold shadow-lg hover:shadow-xl transition-all"
                >
                    Campaña Qipi
                </a>
            </div>
        </div>
    </div>
</nav>

<script>
    const button = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");
    const mobileLinks = document.querySelectorAll(".mobile-link");

    if (button && menu && menuIcon && closeIcon) {
        const toggleMenu = () => {
            const isOpen = !menu.classList.contains("hidden");

            if (isOpen) {
                // Close
                menu.style.maxHeight = "0px";
                setTimeout(() => {
                    menu.classList.add("hidden");
                }, 300);
                menuIcon.classList.remove("hidden");
                closeIcon.classList.add("hidden");
            } else {
                // Open
                menu.classList.remove("hidden");
                // Force a reflow for the transition
                menu.offsetHeight;
                menu.style.maxHeight = "400px";
                menuIcon.classList.add("hidden");
                closeIcon.classList.remove("hidden");
            }
        };

        button.addEventListener("click", toggleMenu);

        // Close menu when clicking a link
        mobileLinks.forEach((link) => {
            link.addEventListener("click", () => {
                if (!menu.classList.contains("hidden")) {
                    toggleMenu();
                }
            });
        });
    }
</script>
