---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

// Campaign Data
const goalAmount = 20000;
const currentAmount = 5500; // Mock initial amount for visual interest
const progressPercentage = (currentAmount / goalAmount) * 100;
---

<Layout title="Campaña de Crowdfunding | QIPI">
	<Navbar />

	<main class="pt-16">
		<!-- Campaign Hero -->
		<section
			class="relative bg-qipi-ink-black text-white py-20 px-4 sm:px-6 lg:px-8 overflow-hidden"
		>
			<div
				class="absolute top-0 right-0 w-1/2 h-full bg-qipi-blue-slate/20 skew-x-12 transform origin-top-right"
			>
			</div>
			<div class="max-w-4xl mx-auto text-center relative z-10">
				<span
					class="text-qipi-light-blue font-bold tracking-widest uppercase text-sm mb-4 block"
					>Campaña de Crowdfunding</span
				>
				<h1 class="text-5xl md:text-7xl font-qipi font-extrabold mb-6">
					QIPI
				</h1>
				<p
					class="text-xl md:text-2xl text-gray-300 mb-12 max-w-2xl mx-auto"
				>
					"QIPI". Ayúdanos a financiar los próximos 3 meses de
					operación y posicionar la innovación rural en el Perú.
				</p>

				<!-- Progress Card -->
				<div
					class="bg-white/10 backdrop-blur-md rounded-2xl p-8 max-w-xl mx-auto border border-white/20 shadow-2xl"
				>
					<div class="flex justify-between items-end mb-4">
						<div>
							<span
								class="text-4xl font-bold text-qipi-light-blue"
								>S/ {currentAmount.toLocaleString()}</span
							>
							<span class="text-sm text-gray-400 block mt-1"
								>recaudados de S/ {
									goalAmount.toLocaleString()
								}</span
							>
						</div>
						<div class="text-right">
							<span class="text-2xl font-bold text-white"
								>{Math.round(progressPercentage)}%</span
							>
						</div>
					</div>
					<div
						class="w-full bg-gray-700/50 rounded-full h-4 mb-8 overflow-hidden"
					>
						<div
							class="bg-gradient-to-r from-qipi-light-blue to-qipi-blue-slate h-4 rounded-full transition-all duration-1000 ease-out"
							style={`width: ${progressPercentage}%`}
						>
						</div>
					</div>
					<a
						href="#donar"
						class="block w-full bg-qipi-light-blue text-qipi-ink-black font-bold py-4 rounded-full text-lg hover:bg-white hover:scale-[1.02] transition-all shadow-lg text-center"
					>
						DONAR AHORA
					</a>
					<p class="text-xs text-gray-400 mt-4">
						Tu aporte impulsa la inclusión financiera rural.
					</p>
				</div>
			</div>
		</section>

		<!-- Objectives Section -->
		<section class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2
						class="text-3xl font-bold text-qipi-ink-black font-qipi"
					>
						Nuestros Objetivos
					</h2>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<div
						class="bg-qipi-white-2 p-10 rounded-3xl border-l-8 border-qipi-light-blue shadow-sm hover:shadow-xl transition-shadow"
					>
						<h3 class="text-2xl font-bold text-qipi-ink-black mb-4">
							Objetivo 1: Operación
						</h3>
						<p class="text-gray-600 text-lg">
							Recaudar <span
								class="font-bold text-qipi-blue-slate"
								>S/ 20,000</span
							> para financiar los próximos 3 meses de operación de
							la Fintech, asegurando la continuidad del crédito para
							nuestros socios.
						</p>
					</div>
					<div
						class="bg-qipi-white-2 p-10 rounded-3xl border-l-8 border-qipi-blue-slate shadow-sm hover:shadow-xl transition-shadow"
					>
						<h3 class="text-2xl font-bold text-qipi-ink-black mb-4">
							Objetivo 2: Posicionamiento
						</h3>
						<p class="text-gray-600 text-lg">
							Posicionar a <span
								class="font-bold text-qipi-ink-black"
								>“Qipi”</span
							> como una iniciativa pionera de innovación rural en el
							Perú, inspirando a otras comunidades.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Storytelling Timeline -->
		<section class="py-24 bg-qipi-white-2 relative">
			<div
				class="absolute inset-0 opacity-5 bg-[radial-gradient(#526687_1px,transparent_1px)] [background-size:16px_16px]"
			>
			</div>
			<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<h2
					class="text-4xl font-bold text-center text-qipi-ink-black mb-20 font-qipi"
				>
					QIPI: El futuro del campo nace hoy
				</h2>

				<div
					class="relative border-l-4 border-qipi-light-blue ml-6 md:ml-10 space-y-20"
				>
					<!-- Phase 1 -->
					<div class="relative pl-8 md:pl-16">
						<div
							class="absolute -left-[14px] top-0 w-6 h-6 bg-qipi-ink-black rounded-full border-4 border-white"
						>
						</div>
						<span
							class="text-qipi-blue-slate font-bold text-sm tracking-wider uppercase mb-2 block"
							>Fase 1: Lanzamiento</span
						>
						<h3 class="text-3xl font-bold text-qipi-ink-black mb-4">
							El Crédito que Cambia Vidas
						</h3>
						<div class="bg-white p-6 rounded-2xl shadow-md mb-6">
							<div
								class="aspect-video bg-gray-200 rounded-xl mb-4 flex items-center justify-center text-gray-400"
							>
								<span class="text-lg"
									>▶ Video: Historias de Impacto</span
								>
							</div>
							<p class="text-gray-600">
								Mostramos resultados tangibles. Historias reales
								de agricultores que, gracias a un crédito
								oportuno, transformaron su cosecha y su futuro.
							</p>
						</div>
					</div>

					<!-- Phase 2 -->
					<div class="relative pl-8 md:pl-16">
						<div
							class="absolute -left-[14px] top-0 w-6 h-6 bg-qipi-ink-black rounded-full border-4 border-white"
						>
						</div>
						<span
							class="text-qipi-blue-slate font-bold text-sm tracking-wider uppercase mb-2 block"
							>Fase 2: El Mecanismo</span
						>
						<h3 class="text-3xl font-bold text-qipi-ink-black mb-4">
							Innovación desde el Campo
						</h3>
						<div class="bg-white p-6 rounded-2xl shadow-md mb-6">
							<div
								class="aspect-video bg-gray-200 rounded-xl mb-4 flex items-center justify-center text-gray-400"
							>
								<span class="text-lg"
									>▶ Video: Cómo funciona el 1%</span
								>
							</div>
							<p class="text-gray-600">
								Explicamos la solidez del modelo. Los intereses
								del 1% se reinvierten automáticamente, haciendo
								crecer el fondo comunal en tiempo real.
							</p>
						</div>
					</div>

					<!-- Phase 3 -->
					<div class="relative pl-8 md:pl-16">
						<div
							class="absolute -left-[14px] top-0 w-6 h-6 bg-qipi-ink-black rounded-full border-4 border-white"
						>
						</div>
						<span
							class="text-qipi-blue-slate font-bold text-sm tracking-wider uppercase mb-2 block"
							>Fase 3: El Origen</span
						>
						<h3 class="text-3xl font-bold text-qipi-ink-black mb-4">
							La Historia de Montes y Vegas
						</h3>
						<div class="bg-white p-6 rounded-2xl shadow-md mb-6">
							<div
								class="aspect-video bg-gray-200 rounded-xl mb-4 flex items-center justify-center text-gray-400"
							>
								<span class="text-lg"
									>▶ Video: Historia del Origen</span
								>
							</div>
							<h4 class="font-bold text-qipi-ink-black mb-2">
								Cronología de la Resiliencia:
							</h4>
							<ul
								class="list-disc list-inside text-sm text-gray-600 space-y-2"
							>
								<li>
									<strong>2015:</strong> Se funda la UNICA "Montes
									y Vegas".
								</li>
								<li>
									<strong>2017-2024:</strong> Evolución desde Excel
									manual hasta mensajería por WhatsApp.
								</li>
								<li>
									<strong>2024 (Abril):</strong> Pérdida de datos
									por falla de PC y viaje de emergencia a Lima.
									<span class="italic text-qipi-blue-slate"
										>El punto de quiebre.</span>
								</li>
								<li>
									<strong>2025:</strong> Nace QIPI. Herramienta
									digital en la nube, probada y validada.
								</li>
							</ul>
						</div>
					</div>

					<!-- Phase 4 -->
					<div class="relative pl-8 md:pl-16">
						<div
							class="absolute -left-[14px] top-0 w-6 h-6 bg-qipi-ink-black rounded-full border-4 border-white"
						>
						</div>
						<span
							class="text-qipi-blue-slate font-bold text-sm tracking-wider uppercase mb-2 block"
							>Fase 4: El Futuro</span
						>
						<h3 class="text-3xl font-bold text-qipi-ink-black mb-4">
							El Campo que Inspira al Mundo
						</h3>
						<p
							class="text-gray-600 bg-white p-6 rounded-2xl shadow-md"
						>
							Aspiramos a ser la infraestructura cooperativa
							digital de referencia global. Tu apoyo hoy construye
							los cimientos de esta visión.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Donation Section -->
		<section
			id="donar"
			class="py-24 bg-qipi-ink-black text-white text-center"
		>
			<div class="max-w-4xl mx-auto px-4">
				<h2 class="text-4xl font-bold mb-8 font-qipi">
					¡Donar es Fácil!
				</h2>
				<p class="text-xl mb-12 text-gray-300">
					Elige el método que prefieras y únete a nuestra red de
					confianza.
				</p>

				<div
					class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-3xl mx-auto"
				>
					<div
						class="bg-white text-qipi-ink-black p-8 rounded-3xl transform hover:scale-105 transition-transform duration-300"
					>
						<h3 class="text-2xl font-bold mb-4">Yape / Plin</h3>
						<!-- Placeholder QR -->
						<div
							class="w-48 h-48 bg-gray-200 mx-auto mb-4 flex items-center justify-center rounded-xl"
						>
							<span class="text-gray-400 font-bold text-2xl"
								>QR</span
							>
						</div>
						<p class="font-mono text-xl font-bold">999 999 999</p>
						<p class="text-sm text-gray-500 mt-2">
							A nombre de: Asociación Qipi
						</p>
					</div>
					<div
						class="bg-qipi-blue-slate text-white p-8 rounded-3xl transform hover:scale-105 transition-transform duration-300 flex flex-col justify-center"
					>
						<h3 class="text-2xl font-bold mb-6">
							Transferencia BCP
						</h3>
						<div class="text-left space-y-4">
							<div>
								<p class="text-sm opacity-70">
									Número de Cuenta
								</p>
								<p class="font-mono text-xl font-bold">
									191-12345678-0-01
								</p>
							</div>
							<div>
								<p class="text-sm opacity-70">CCI</p>
								<p class="font-mono text-xl font-bold">
									002-191-12345678001-59
								</p>
							</div>
							<p class="text-sm opacity-60 mt-4 text-center">
								Cuenta Corriente Soles<br />Asociación Qipi
							</p>
						</div>
					</div>
				</div>

				<div class="mt-16">
					<p class="text-gray-400 mb-4">¿Dudas o consultas?</p>
					<a
						href="https://wa.me/51999999999"
						target="_blank"
						class="inline-flex items-center gap-2 text-qipi-light-blue hover:text-white transition-colors"
					>
						<svg
							class="w-6 h-6"
							fill="currentColor"
							viewBox="0 0 24 24"
							><path
								d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
							></path></svg
						>
						Escríbenos por WhatsApp
					</a>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>
